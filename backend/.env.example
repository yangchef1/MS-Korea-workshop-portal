# Azure Configuration
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_DOMAIN=yourdomain.onmicrosoft.com
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000

# Azure AD App Registration (for PKCE Authentication - No Secret Required)
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000

# Session Configuration
SESSION_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Authentication Mode
# Set to true for local development (uses Azure CLI credential from 'az login')
# Set to false or omit for production (uses Managed Identity)
USE_AZURE_CLI_CREDENTIAL=true

# Azure Blob Storage (No connection string needed - uses Managed Identity)
BLOB_STORAGE_ACCOUNT=workshopstorage
BLOB_CONTAINER_NAME=workshop-data

# Application Configuration (Optional)
# These have defaults in config.py but can be overridden
# PASSWORD_LENGTH=16
# DEFAULT_USER_ROLE=Contributor
# RESOURCE_GROUP_PREFIX=rg-workshop
