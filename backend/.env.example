# Azure Configuration (MSAL / JWT validation)
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000

# Service Principal (Azure resource operations - separate tenant)
AZURE_SP_DOMAIN=yourdomain.onmicrosoft.com
AZURE_SP_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000
AZURE_SP_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_SP_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_SP_CLIENT_SECRET=your-client-secret-here

# Authentication Mode
# Set to true for local development without SP (uses Azure CLI credential from 'az login')
# Set to false when using Service Principal or Managed Identity
USE_AZURE_CLI_CREDENTIAL=false

# Azure Table Storage (No connection string needed - uses Managed Identity)
TABLE_STORAGE_ACCOUNT=workshopstorage

# Multi-subscription support (comma-separated). Falls back to AZURE_SP_SUBSCRIPTION_ID if empty.
ALLOWED_SUBSCRIPTION_IDS=

# CORS: additional production origins (comma-separated). Local origins are always included.
ALLOWED_ORIGINS=
